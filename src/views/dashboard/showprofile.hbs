                  <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                  </li>
                </ul>
              </div>



              <!-- /.tab-pane -->
              <div class="tab-pane" id="notas">
                <!-- Post -->
                <div class="post">
                  <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="/dist/img/profiledip.png" alt="user image">
                    <span class="username">
                      <a href="#">Dip. Rafael Gustavo Fararoni Magaña</a>

                    </span>
                    <span class="description">Shared publicly - 7:30 PM today</span>
                  </div>
                  <!-- /.user-block -->
                  <p>
                    Lorem ipsum represents a long-held tradition for designers,
