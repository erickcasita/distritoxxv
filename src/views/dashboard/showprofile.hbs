<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Perfil</h1>
      </div><!-- /.col -->

    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">

        <!-- Profile Image -->
        <div class="card card-primary card-outline">
          <div class="card-body box-profile">
            <div class="text-center">
              {{#each card1}}
              <img class="profile-user-img img-fluid img-circle" src="{{{'pathfoto'}}}" alt="User profile picture">
              {{/each}}

            </div>
            {{#each card1}}
            <h3 class="profile-username text-center">{{'nombre'}} {{'apellidop'}}</h3>
            {{/each}}


            <p class="text-muted text-center">Miembro Activo</p>

            <ul class="list-group list-group-unbordered mb-3">
              <li class="list-group-item">
                {{#each card1}}
                <b>ID:</b> <a class="float-right">{{'clvpersona'}}</a>
                {{/each }}

              </li>
              <li class="list-group-item">
                {{#each cargo}}
                <b>CARGO:</b> <a class="float-right">{{'nombrecargo'}}</a>
                {{/each }}

              </li>
              <li class="list-group-item">
                {{#each totalpersonas}}
                <b>TOTAL PERSONAS:</b> <a class="float-right">{{'total_personas'}}
                </a>
                {{/each }}
              </li>
            </ul>

            <a href="#" class="btn btn-primary btn-block"><b>Nueva Nota</b></a>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- About Me Box -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Acerca de</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <strong><i class="fa fa-user mr-1"></i> NOMBRE COMPLETO</strong>

            {{#each card1}}
            <p class="text-muted">{{'nombre'}} {{'apellidop'}} {{'apellidom'}}</p>

            {{/each }}

            <hr>
            <strong><i class="fa fa-user mr-1"></i> NÚMERO DE TELÉFONO</strong>

            {{#each card1}}
            <p class="text-muted">{{'numtel'}}</p>

            {{/each }}

            <hr>

            <strong><i class="fa fa-map-marker mr-1"></i> MUNICIPIO</strong>
            {{#each card2}}
            <p class="text-muted">{{'nombremunicipio'}},VERACRUZ</p>

            {{/each }}


            <hr>

            <strong><i class="fa fa-location-arrow mr-1"></i> SECCIÓN ELECTORAL</strong>
            {{#each card1}}
            <p class="text-muted">{{'seccelectoral'}}</p>

            {{/each }}


            <hr>
            <strong><i class="fa fa-location-arrow mr-1"></i>DOMICILIO</strong>
            {{#each card1}}
            <p class="text-muted">{{'direccion'}} COLONIA:



              {{/each }}
              {{#each card2}}
              {{'nombrecolonias'}}
              {{/each}} CÓDIGO POSTAL: {{#each card1}}
              {{'cdgpostal'}}
              {{/each}}</p>

          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
      <div class="col-md-9">
        <div class="card">
          <div class="card-header p-2">
            <ul class="nav nav-pills">
              <li class="nav-item"><a class="nav-link active" href="#timeline" data-toggle="tab">Historial de Apoyo</a>
              </li>
              <li class="nav-item"><a class="nav-link" href="#notas" data-toggle="tab">Notas de Perfil</a></li>
              <li class="nav-item"><a class="nav-link" href="#editar" data-toggle="tab">Editar Perfil</a></li>
            </ul>
          </div><!-- /.card-header -->
          <div class="card-body">
            <div class="tab-content">

              <!-- /.tab-pane -->
