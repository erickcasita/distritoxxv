{{#if success}}
<div class="card-body">
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fa fa-check"></i> Éxito!</h5>
        {{success}}
    </div>
</div>
{{/if}}


{{#if message}}
<div class="card-body">
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fa fa-check"></i> Mensaje del Administrador!</h5>
        {{message}}
    </div>
</div>
{{/if}}



{{#if error}}
<div class="card-body">
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fa fa-check"></i> Error!</h5>
        {{error}}
    </div>
</div>
{{/if}}

{{#if showreportmanage}}
<div class="card-body">
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fa fa-check"></i> Éxito!</h5>
        {{showreportmanage}} <a href="/dashboard/downloadreportmanage" >¿Desea descargar el reporte?</a>
    </div>
</div>
{{/if}}