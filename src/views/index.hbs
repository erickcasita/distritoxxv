<link rel="stylesheet" href="/dist/css/bg.css">
<div class="login-box">
    <div class="login-logo">
       <img class="" src="/dist/img/logologin.png" alt="" width="250">
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Inicio de Sesión</p>

            <form action="/signin" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Usuario" id="user" name="user">
                    <span class="fa fa-user "></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Contraseña" id="password" name="password">
                    <span class="fa fa-lock "></span>
                </div>
                 <div class="form-group has-feedback">
                      <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                 </div>
           
            </form>
            <!-- /.social-auth-links -->

            <p class="mb-1">
                <a href="mailto:auditoriasistemas@coronalostuxtlas.com.mx">¿No tienes acceso?</a>
            </p>
         
        </div>
        <!-- /.login-card-body -->
    </div>
</div>